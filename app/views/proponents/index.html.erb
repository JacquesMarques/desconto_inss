<p id="notice"><%= notice %></p>

<h1>Proponents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Document</th>
      <th>Birthday</th>
      <th>Address</th>
      <th>Personal phone</th>
      <th>References phone</th>
      <th>Salary</th>
      <th>Inss discount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proponents.each do |proponent| %>
      <tr>
        <td><%= proponent.name %></td>
        <td><%= proponent.document %></td>
        <td><%= proponent.birthday %></td>
        <td><%= proponent.address %></td>
        <td><%= proponent.personal_phone %></td>
        <td><%= proponent.references_phone %></td>
        <td><%= proponent.salary %></td>
        <td><%= proponent.inss_discount %></td>
        <td><%= link_to 'Show', proponent %></td>
        <td><%= link_to 'Edit', edit_proponent_path(proponent) %></td>
        <td><%= link_to 'Destroy', proponent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

